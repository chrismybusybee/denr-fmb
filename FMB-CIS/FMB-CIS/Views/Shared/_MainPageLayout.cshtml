<script type="text/javascript">
    $(document).ready(function () {
        feather.replace();

        function toggleDropdown(menuItem, dropdown) {
            dropdown.classList.toggle("active");
            const isOpen = dropdown.classList.contains("active");
            sessionStorage.setItem(menuItem + "DropdownState", isOpen ? "open" : "closed");
        }

        function setupDropdown(menuItemID, dropdownID) {
            const menuItem = document.getElementById(menuItemID);
            const dropdown = document.getElementById(dropdownID);

            menuItem.addEventListener("click", function (e) {
                e.preventDefault();
                toggleDropdown(menuItemID, dropdown);
            });

            const storedState = sessionStorage.getItem(menuItemID + "DropdownState");
            if (storedState === "open") {
                dropdown.classList.add("active");
            }
        }

        setupDropdown("chainsawImporterSubMenuItem", "chainsawImporterDropdown");

        setupDropdown("chainsawSellerSubMenuItem", "chainsawSellerDropdown");

        function setActiveMenuItem(menuItemId) {
            const menuItems = document.querySelectorAll('#menu-items ul li');
            menuItems.forEach((item) => {
                item.classList.remove('active-menu-item');
            });

            document.getElementById(menuItemId).classList.add('active-menu-item');
        }

        const currentPage = window.location.pathname;

        const pageToMenuItemMap = {
            "/Dashboard": "dashboardMenuItem",
            "/ProfileManagement": "profileManagementMenuItem",
            "/AccountManagement": "accountManagementMenuItem",
            "/ChainsawImporter": "chainsawImporterApplication",
            "/ChainsawImporter/ViewChainsawImporter": "chainsawImporterApplication",
            "/ChainsawSeller": "chainsawSellerApplication",
            "/ChainsawSeller/ViewChainsawSeller": "chainsawSellerApplication",
        };

        if (currentPage.startsWith("/AccountManagement/ViewAccount/")) {
            const urlParts = currentPage.split("/");
            const id = urlParts[urlParts.length - 1];
            setActiveMenuItem(pageToMenuItemMap["/AccountManagement"]);
        } else if (pageToMenuItemMap[currentPage]) {
            setActiveMenuItem(pageToMenuItemMap[currentPage]);
        }

        const activeMenuItemId = document.querySelector('.active-menu-item').id;
        localStorage.setItem('activeMenuItem', activeMenuItemId);

        const storedActiveMenuItem = localStorage.getItem('activeMenuItem');
        if (storedActiveMenuItem) {
            setActiveMenuItem(storedActiveMenuItem);
        }
    });
</script>